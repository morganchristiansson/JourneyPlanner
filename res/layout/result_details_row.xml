<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent" a:layout_height="fill_parent">
	<TextView a:id="@+id/start"
		a:text="00:00"
	    a:layout_width="60dip" a:layout_height="wrap_content"/>
    <TextView a:id="@+id/type"
    	a:text="Type"
    	a:layout_below="@id/start"
	    a:layout_width="60dip" a:layout_height="wrap_content"/>
	<TextView a:id="@+id/end"
		a:text="00:59"
    	a:layout_below="@id/type"
	    a:layout_width="60dip" a:layout_height="wrap_content"/>

    <TextView a:id="@+id/from"
    	a:text="FROM_NAME"
    	a:layout_toRightOf="@id/start"
    	a:textStyle="bold"
	    a:layout_width="fill_parent" a:layout_height="wrap_content"/>
    <TextView a:id="@+id/to"
    	a:text="Take TYPE towards DESTINATION"
    	a:layout_below="@id/from" a:layout_toRightOf="@id/start"
	    a:layout_width="fill_parent" a:layout_height="wrap_content"/>
	<TextView a:id="@+id/duration"
		a:text="Average journey time: DURATION"
		a:layout_below="@id/to" a:layout_toRightOf="@id/start"
	    a:layout_width="wrap_content" a:layout_height="wrap_content"/>
	<TextView a:id="@+id/content"
	    a:layout_width="fill_parent" a:layout_height="wrap_content"/>
</RelativeLayout>

